# ========================================
# SafeTrail Environment Configuration
# ========================================

# ----------------------------------------
# Firebase Configuration (Frontend & Backend)
# ----------------------------------------
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Admin SDK (Backend only)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789012345678901
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# ----------------------------------------
# Google AI API Configuration
# ----------------------------------------
# Get from Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_ai_gemini_key_here

# ----------------------------------------
# Twilio Configuration (SMS/Voice)
# ----------------------------------------
# Get from Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ----------------------------------------
# Supabase Configuration (Database)
# ----------------------------------------
# Get from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ----------------------------------------
# Optional: Maps & Location Services
# ----------------------------------------
# Google Maps API (for enhanced mapping)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox API (alternative mapping service)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_token_here

# OpenRouteService (routing for real road paths)
NEXT_PUBLIC_ORS_API_KEY=your_openrouteservice_api_key

# ----------------------------------------
# Backend API Configuration
# ----------------------------------------
# Backend server URL (for WebSocket and API calls)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ----------------------------------------
# Development Settings
# ----------------------------------------
# Environment mode
NODE_ENV=development

# Enable debug logging
DEBUG=true

# Optional: Force a fixed location in the app (lat,lng)
# Example (CET Trivandrum): 8.5466,76.9048
NEXT_PUBLIC_FORCE_LOCATION=

# ----------------------------------------
# Security Settings
# ----------------------------------------
# JWT Secret for backend authentication
JWT_SECRET=your_jwt_secret_key_here

# Session secret
SESSION_SECRET=your_session_secret_here

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox API
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000
BACKEND_PORT=8000
FRONTEND_PORT=3000
CORS_ORIGINS=http://localhost:3000
